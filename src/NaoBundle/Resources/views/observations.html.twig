    <div class="col-md-4 col-xs-12 observationContainer" id="observation-{{ Observation.id }}">
        <div class="row layer">
            <div class="sheet">
                <div class="col-xs-8">
                    <p class="user">{{ Observation.user }}</p>
                    {% if Observation.user.roles == ['ROLE_ORNITHOLOGUE', 'ROLE_USER'] %}
                        <p class="role">Ornithologue</p>
                    {% elseif Observation.user.roles == ['ROLE_ADMINISTRATEUR', 'ROLE_USER'] %}
                        <p class="role">Administrateur</p>
                    {% else %}
                        <p class="role">Utilisateur</p>
                        <p class="role">{% if Observation.statut == "attente" %}En attente{% else %}Publi√©{% endif %}</p>

                    {% endif %}
                </div>
            </div>
            <div class="row contain">
                <div class="col-xs-6">
                    <p class="link"><a href="{{ Observation.oiseau.url }}">Lien fiche INPN</a></p>
                    {% if Observation.image is not null %}
                    <a href="{{ asset(Observation.image.webPath) }}" class="thumbnail" target="_blank" title="Ouvrir l'image dans un nouvel onglet">
                    <img class="imageObservation"
                         src="{{ asset(Observation.image.webPath) }}"
                         alt="{{ Observation.image.alt }}"
                    />
                    </a>
                    {% elseif Observation.image is null %}
                        <img  class="imageObservation" src="{{ asset('images/ornithologue.png') }}" alt="no-picture"/>
                    {% endif %}
                </div>
                <div class="col-xs-6">
                    <p class="nameOiseau">{{ Observation.oiseau.nomVern }}</p>
                    <p class="lat">Latitude : {{ Observation.latitude }}</p>
                    <p class="lon">Longitude : {{ Observation.longitude }}</p>
                    <span class="date">le {{ Observation.date|date('d/m/Y H:i')}}</span></p>
                    <p class="lon">Description : {{ Observation.description }}</p>
                </div>
            </div>
        </div>
    </div>